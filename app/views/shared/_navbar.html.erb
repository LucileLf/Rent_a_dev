<div class="navbar">
  <div class="logo">
    <a href="/">Dev-A-Licious</a>
  </div>

  <div class="search
  ">
      <%= form_with url: developers_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Type a keyword"
          %>
        <%= submit_tag "Search", name: "", class: "btn btn-search" %>
      <% end %>
  </div>

  <div class="call-to-action">
    <%= link_to "Ajoutez un dev", new_developer_path, id: "add" %>

    <% if current_user %>
      <div class="profile" data-controller="profile">
        <div style="width: 30px">
          <i class="fas fa-user" id="login" data-action="hover->profile#connect" data-profile-target="loginButton"></i>
        </div>
        <div class="profile-menu" data-profile-target="profileMenu">
          <%= link_to 'Mon profil', user_profile_path(current_user) %>
          <div class="separator"></div>
          <%= link_to "DÃ©connexion", destroy_user_session_path, data: { turbo_method: :delete, turbo_action: "replace", turbo_frame: "user-menu" } %>
        </div>
      </div>
    <% else %>
      <div class="profile" data-controller="profile">
        <i class="fas fa-user" id="login" data-action="hover->profile#connect" data-profile-target="loginButton"></i>
        <div class="profile-menu" data-profile-target="profileMenu">
          <%= link_to "Login", new_user_session_path %>
          <div class="separator"></div>
          <%= link_to "S'inscrire", new_user_registration_path %>
        </div>
      </div>
    <% end %>
  </div>
</div>
