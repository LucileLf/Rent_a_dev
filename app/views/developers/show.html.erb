<div class="show-container">

  <div class="show-container-top">
    <div class="developer-pictures">
      <% if !@developer.image_url.nil? %>
        <%= image_tag(@developer.image_url, alt: "developer picture", class: "image-style") %>
      <% else @developer.photo.attached? %>
        <%= cl_image_tag @developer.photo.key, alt: "developer picture" %>
      <% end %>
    </div>
    <div class="booking">
      <div class="developer-name">
          <%= @developer.first_name %> <%= @developer.last_name %>
          <p>Cette annonce est proposé par <%= @developer.user.first_name %> <%= @developer.user.last_name %></p>
      </div>
      <div class="developer-rate mt-5">
        <%= @developer.price_per_day %>€ par jour
      </div>
      <div class="booking-form">
        <form class="form-group">
          <div class="mt-3">
            <label for="dateArrivee">Date d'arrivée:</label><br>
            <input type="date" id="dateArrivee" name="dateArrivee" class="form-control">
          </div>
          <div class="mt-3">
            <label for="dateDepart">Date de départ:</label><br>
            <input type="date" id="dateDepart" name="dateDepart" class="form-control">
          </div>

          <input type="submit" value="Reserver" class="mt-3 btn custom-button">
        </form>
      </div>
      <div class="d-flex justify-content-center gap-5 mt-5">
        <% if policy(@developer).edit? %>
        <%= link_to "Edit this developer", edit_developer_path(@developer) %>
        <% end %>
        <%= link_to "Delete this developer", @developer, method: :delete if policy(@developer).destroy? %>
      </div>
    </div>
  </div>

  <div class="show-container-bottom mt-4">
      <div class="description">
        <h2>Description :</h2>
        <p> <%= @developer.description %> </p>
      </div>
  </div>

  <div class="show-container-informations mt-4 d-flex justify-content-between">
    <div class="review-container mb-4">
      <h2>Les avis utilisateurs :</h2>
    </div>

    <div class="map-container mb-4">
      <h2>Où suis-je ? :</h2>
      <div style="width: 100%; height: 100%;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
